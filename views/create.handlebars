<h2>Create</h2>
<form action="/items/create" method="post">
    <input id="title-input" name="title" value="{{newItem.title}}" /> {{#with newItem.errors.title as |error|}}
    <span class="error">{{error.message}}</span>
    {{/with}}
    <textarea id="description-input" name="description">{{newItem.description}}</textarea> {{#with newItem.errors.description as |error|}}
    <span class="error">{{error.message}}</span>
    {{/with}}

    <input id="imageUrl-input" name="imageUrl" value="{{newItem.imageUrl}}" /> {{#with newItem.errors.imageUrl as |error|}}
    <span class="error">{{error.message}}</span>
    {{/with}}
    <br>
    <button id="submit-button" type="submit">Submit</button>
</form>